<% provide(:title, 'Microposts') %>
<h1>Microposts</h1>

<%= form_tag(microposts_path, :method => 'get') do %>
    <p>
    <%= label_tag "Reverse results order?" %>
    <%= check_box_tag :direction, "DESC" %>
    </p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
<% end %>
<%= will_paginate %>
<ul class="microposts">
      <%= render @microposts %>
</ul>
<%= will_paginate %>
