<%= form_for micropost.likes.build(micropost_id: micropost.id, liker_id: current_user.id),
             remote: true do |f| %>
    <div>
      <%= f.hidden_field :micropost_id, :value => micropost.id %>
      <%= f.hidden_field :liker_id, :value => current_user.id %>
    </div>
    <%= f.submit "Like", class: "btn btn-small btn-primary" %>
<% end %>
